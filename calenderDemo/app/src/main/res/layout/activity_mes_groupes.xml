<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.matthieu.app.Mes_groupes">

    <LinearLayout
        android:id="@+id/Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/LinearLayout02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <ImageButton
                android:id="@+id/retour"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_back"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:background="#FFFFFF"
                android:textColor="#000000"
                android:text="Mes Groupes" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/group1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="6dp"
                android:textColor="#EEE"
                android:background="#007"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="left"
                android:text="4IF 2017-2018" />

            <Button
                android:id="@+id/group2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="#721"
                android:textColor="#EEE"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="left"
                android:text="4IF H4003" />


            <Button
                android:id="@+id/group3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="#172"
                android:textColor="#EEE"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="left"
                android:visibility="gone"
                android:text="INSECURITY" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="24dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_action_name"/>

                <Button
                    android:id="@+id/addActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:background="#FFF"
                    android:textStyle="normal"
                    android:layout_marginTop="30sp"
                    android:layout_marginLeft="5sp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    android:text="CrÃ©er un nouveau groupe"
                    />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textSize="28sp"
                android:background="#FFFFFF"
                android:textColor="#000000"
                android:text="Invitations"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/newgroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="#FFF"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:text="INSECURITY" />

                <ImageButton
                    android:id="@+id/addgroup"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#FFF"
                    android:src="@drawable/ic_action_validate"/>

                <ImageButton
                    android:id="@+id/refusegroup"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#FFF"
                    android:src="@drawable/ic_action_refuse"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>




</android.support.constraint.ConstraintLayout>
